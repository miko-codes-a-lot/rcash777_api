{
  "name": "waymore-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "up": "docker-compose up",
    "start": "nodemon --watch 'src/**/*.{js,ts,json}' --exec 'tsc --noEmit && node --trace-warnings --import tsx src/index.ts'",
    "dev": "nodemon -e ts --exec 'tsc --noEmit && node --trace-warnings --import tsx src/index.ts'",
    "format": "prettier --write 'src/**/*.{js,ts,json}' --config ./.prettierrc",
    "lint": "eslint --plugin tsc --rule 'tsc/config: [2, {configFile: './tsconfig.json'}]' './src/**/*.{js,ts,json}'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.3.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongodb": "^4.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.8",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-tsc": "^2.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.9.0",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git@bb-thefirm:the-firm/waymore-backend.git"
  },
